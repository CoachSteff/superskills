# SuperSkills Environment Variables Template
# Copy this file to .env and fill in your API keys

# ============================================
# Existing Skills
# ============================================

# ElevenLabs (Narrator skill)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id_here

# Gemini (Designer skill)
GEMINI_API_KEY=your_gemini_api_key_here

# Midjourney (Designer skill - alternative)
MIDJOURNEY_API_KEY=your_midjourney_api_key_here

# Postiz (Marketer skill)
POSTIZ_API_KEY=your_postiz_api_key_here

# ============================================
# New Skills
# ============================================

# OpenAI (Transcriber, QuizMaker, SummarizAIer)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (SummarizAIer - alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AssemblyAI (Transcriber - alternative)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# SendGrid (EmailCampaigner)
SENDGRID_API_KEY=your_sendgrid_api_key_here
DEFAULT_FROM_EMAIL=your_email@example.com

# Microsoft Graph / Outlook (Planner)
MICROSOFT_APPLICATION_ID=your_microsoft_application_id_here
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_TENANT_ID=your_microsoft_tenant_id_here
OUTLOOK_EMAIL=your_outlook_email@example.com

# Typeform (FeedbackCollector)
TYPEFORM_API_KEY=your_typeform_api_key_here

# Google Forms (FeedbackCollector - alternative)
GOOGLE_FORMS_API_KEY=your_google_forms_api_key_here

# Stripe (Invoicer - optional)
STRIPE_API_KEY=your_stripe_api_key_here

# PayPal (Invoicer - optional)
PAYPAL_CLIENT_ID=your_paypal_client_id_here

# Pinecone (KnowledgeBase - optional)
PINECONE_API_KEY=your_pinecone_api_key_here

# Craft Docs (Craft skill)
CRAFT_API_ENDPOINT=your_craft_api_endpoint_from_imagine_tab
CRAFT_API_KEY=your_craft_api_key_here

# Notion (Notion skill)
NOTION_API_KEY=your_notion_api_key_here

