{% extends "base.html.j2" %}

{% block additional_styles %}
.quote-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.quote-text {
    font-family: var(--font-body);
    font-size: 42px;
    font-style: italic;
    color: var(--color-text);
    max-width: 75%;
    line-height: 1.4;
    position: relative;
    padding: 0 60px;
}

.quote-text::before,
.quote-text::after {
    content: '"';
    font-size: 72px;
    color: var(--color-primary);
    position: absolute;
    font-style: normal;
}

.quote-text::before {
    left: 0;
    top: -20px;
}

.quote-text::after {
    right: 0;
    bottom: -40px;
}

.quote-author {
    font-size: {{ brand.typography.sizes.caption }};
    color: var(--color-text-secondary);
    margin-top: 32px;
}

.quote-author::before {
    content: "â€” ";
}
{% endblock %}

{% block content %}
<div class="quote-container">
    <p class="quote-text">{{ slide.quote_text }}</p>
    {% if slide.quote_author %}
    <p class="quote-author">{{ slide.quote_author }}</p>
    {% endif %}
</div>
{% endblock %}
