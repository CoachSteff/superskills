{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["action", "confidence", "reasoning"],
  "properties": {
    "action": {
      "type": "string",
      "enum": ["search", "execute_skill", "run_workflow", "list", "show", "config", "discover"]
    },
    "target": {
      "type": ["string", "null"]
    },
    "parameters": {
      "type": "object"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "reasoning": {
      "type": "string"
    }
  }
}
