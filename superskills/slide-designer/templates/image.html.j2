{% extends "base.html.j2" %}

{% block additional_styles %}
.image-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.heading {
    font-family: var(--font-heading);
    font-size: {{ brand.typography.sizes.content_heading }};
    font-weight: {{ brand.typography.heading.weight }};
    color: var(--color-primary);
    margin-bottom: 32px;
    text-align: center;
}

.slide-image {
    max-width: 80%;
    max-height: 60%;
    object-fit: contain;
}

.caption {
    font-size: {{ brand.typography.sizes.caption }};
    color: var(--color-text-secondary);
    margin-top: 24px;
    text-align: center;
}
{% endblock %}

{% block content %}
<div class="image-container">
    {% if slide.heading %}
    <h2 class="heading">{{ slide.heading }}</h2>
    {% endif %}
    
    <img class="slide-image" src="{{ slide.image_url }}" alt="{{ slide.heading | default('Slide image') }}">
    
    {% if slide.caption %}
    <p class="caption">{{ slide.caption }}</p>
    {% endif %}
</div>
{% endblock %}
