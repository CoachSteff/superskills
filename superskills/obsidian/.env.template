# Obsidian Vault Configuration
# Copy this file to .env and configure for your vault

# ============================================================================
# REQUIRED SETTINGS
# ============================================================================

# Obsidian Vault Path (REQUIRED)
# Absolute path to your Obsidian vault root directory
# Example: /Users/username/Documents/Obsidian Vault
OBSIDIAN_VAULT_PATH=/path/to/your/vault

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================

# Read-Only Mode (OPTIONAL)
# Set to 'true' to prevent all write operations (safe mode)
# Default: false
OBSIDIAN_READ_ONLY=false

# Auto-Update Links on Move (OPTIONAL)
# Automatically update wiki links when moving/renaming notes
# Default: true
OBSIDIAN_AUTO_UPDATE_LINKS=true

# Verbose Logging (OPTIONAL)
# Enable detailed logging for debugging
# Default: true
OBSIDIAN_VERBOSE=true

# Default Frontmatter Fields (OPTIONAL)
# Comma-separated list of default fields to add to new notes
# Default: created,modified
OBSIDIAN_DEFAULT_FRONTMATTER=created,modified
